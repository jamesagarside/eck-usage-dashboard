# ECK Usage Monitor Configuration
# Copy this file to config.env and set your values

# Elasticsearch Configuration
ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com:9200
ELASTICSEARCH_API_KEY=your_api_key_here

# Monitoring Configuration
INDEX_PREFIX=eck-usage
CREATE_TEMPLATES=true
VERBOSE=false

# Collection Settings
# NAMESPACE=elastic-system  # Monitor specific namespace (optional)
# HEALTH_FILTER=true        # Only collect components with health status (default: true)
# COLLECTION_INTERVAL=3600  # Collection interval in seconds (for cron jobs)

# Kubernetes Configuration (optional - uses current kubectl context by default)
# KUBECONFIG=/path/to/your/kubeconfig
# KUBE_CONTEXT=your-context-name
